<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Example: Expenses Structure Section -->
        <TextView
            android:id="@+id/tvExpensesStructure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Expenses Structure (Last 30 Days)"
            android:textSize="16sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#CCCCCC"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/tvShowMoreExpenses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SHOW MORE"
            android:textSize="14sp"
            android:textColor="#2196F3"
            android:layout_marginTop="8dp" />

        <!-- Example: Balance Trend Section -->
        <TextView
            android:id="@+id/tvBalanceTrend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Balance Trend (Last 30 Days)"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="8dp"
            android:background="#CCCCCC" />

        <TextView
            android:id="@+id/tvShowMoreBalance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SHOW MORE"
            android:textSize="14sp"
            android:textColor="#2196F3"
            android:layout_marginTop="8dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="8dp"
            android:background="#CCCCCC" />

        <View
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="8dp"
            android:background="#CCCCCC" />

        <View
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="8dp"
            android:background="#CCCCCC" />

    </LinearLayout>
</ScrollView>
