<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white">

    <!-- Title -->
    <TextView
        android:id="@+id/currencyTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Currency Exchange Rates"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- Input Amount -->
    <TextView
        android:id="@+id/text_myr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="  MYR"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/amountInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Amount (MYR)"
        android:inputType="numberDecimal"
        android:padding="12dp"
        android:background="@drawable/input_border"
        android:layout_marginBottom="16dp" />

    <!-- Dropdown to select target currency -->
    <Spinner
        android:id="@+id/currencySpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:spinnerMode="dropdown" />

    <!-- Display Exchange Rate -->
    <TextView
        android:id="@+id/exchangeRateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exchange Rate: "
        android:textSize="18sp"
        android:layout_marginBottom="16dp" />

    <!-- Convert Button -->
    <Button
        android:id="@+id/convertButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Convert"
        android:background="@color/colorPrimary"
        android:textColor="@android:color/white"
        android:layout_marginBottom="16dp" />

    <!-- Result -->
    <TextView
        android:id="@+id/convertedAmountText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Converted Amount: "
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/referenceText"
        android:layout_width="379dp"
        android:layout_height="41dp"
        android:layout_gravity="start"
        android:layout_marginTop="8dp"
        android:gravity="left"
        android:text="*All real-time exchange rate data are sourced from ExchangeRate-API."
        android:textSize="12sp"
        android:textStyle="italic" />


</LinearLayout>
